<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFFA"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/saveNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noteTextSummary"
                android:layout_alignStart="@+id/noteTextSummary"
                android:layout_marginStart="140dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorPrimaryDark"
                android:text="Save Note" />

            <EditText
                android:id="@+id/noteTextSummary"
                android:layout_width="381dp"
                android:layout_height="91dp"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:background="#F0F8FF"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noteTextCue"
                android:layout_alignStart="@+id/noteTextCue"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="1dp"
                android:text="Summary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noteLabels"
                android:layout_alignStart="@+id/noteLabels"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:text="Notes"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/noteTitle"
                android:layout_alignStart="@+id/noteTitle"
                android:layout_marginStart="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="1dp"
                android:text="Cues"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/noteTextCue"
                android:layout_width="142dp"
                android:layout_height="416dp"
                android:layout_below="@+id/textView"
                android:layout_alignStart="@+id/textView"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:background="#F0F8FF"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/noteLabels"
                android:layout_width="205dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/noteTitle"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:hint=" Labels"
                android:inputType="textPersonName"
                android:textAlignment="textStart" />

            <EditText
                android:id="@+id/noteTitle"
                android:layout_width="142dp"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:background="@color/colorPrimary"
                android:ems="10"
                android:hint=" Note title"
                android:inputType="textPersonName"
                android:textAlignment="textStart" />

            <EditText
                android:id="@+id/noteTextText"
                android:layout_width="244dp"
                android:layout_height="416dp"
                android:layout_below="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="#F0F8FF"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:shadowColor="#FFF8DC" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>